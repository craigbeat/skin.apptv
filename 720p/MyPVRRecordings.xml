<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>50</views>
	<include>screen-fade</include>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>
		<control type="grouplist">
			<left>946</left>
			<top>35</top>
			<width>auto</width>
			<height>72</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label"><!-- Video screen heading -->
				<width max="256">auto</width>
				<height>72</height>
				<label>$VAR[PVRHeading]</label>
				<font>font18</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label"><!-- Number of files -->
				<width max="80">auto</width>
				<height>72</height>
				<label>$INFO[Container.NumItems,(,)]</label>
				<aligny>top</aligny>
			</control>
		</control>

		<control type="group">
			<include file="View-PVR.xml">PVRListView</include>
		</control>

		<control type="group"><!-- Screen Settings Menu -->
			<left>0</left>
			<top>720</top>
			<include>Screen-settings</include>
			<include>fadebackground</include>
			<control type="image"><!-- Button background -->
				<left>440</left>
				<top>130</top>
				<width>396</width>
				<height>452</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>450</left>
				<top>140</top>
				<width>376</width>
				<height>432</height>
				<onright>15</onright>
				<onleft>15</onleft>
				<itemgap>0</itemgap>
				<control type="button" id="2"><!-- View as button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
				</control>
				<control type="button" id="3"><!-- Sort by button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
				</control>
				<control type="togglebutton" id="4"><!-- Sort direction button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>font11</font>
				</control>
				<control type="radiobutton" id="5"><!--Group items-->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[19270]</label>
					<font>font11</font>
					<visible>[Window.IsVisible(tvrecordings) | Window.IsVisible(radiorecordings)]</visible>
				</control>
				<control type="button" id="28"><!--Change Channel Groups-->
					<width>376</width>
					<height>48</height>
					<label>-</label>
					<font>font11</font>
				</control>
				<control type="button" id="901"><!-- Channels -->
				<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[19019]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvchannels)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiochannels)</onclick>
				</control>
				<control type="button" id="902"><!-- Guide -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[22020]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvguide)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radioguide)</onclick>
				</control>
				<control type="button" id="904"><!-- Search -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[137]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvsearch)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiosearch)</onclick>
				</control>
				<control type="button" id="905"><!-- Timers -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[19040]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvtimers)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiotimers)</onclick>
				</control>
			</control>
		</control>
	</controls>
</window>